@model HomeVM
<style>
    .tests {
        background-image: url(../images/top-bkgs/carBg.jpg);
        background-size: cover;
    }
</style>
<div class="page-head tests">
    <div class="inner-desc">
        <div class="container">
            @foreach (var item in Model.attorneysSliders)
            {
                <h1 class="page-title">@Html.Raw(item.Name)</h1>
            }
        </div>
    </div>
</div>

<section class="section-holder">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.attorneyWorks)
            {
                <div class="col-lg-10 offset-lg-1 alignc">
                    <span class="heading-subtitle">@Html.Raw(item.Header)</span>
                    <h2 class="margin-b16">@Html.Raw(item.Title)</h2>
                    <p> @Html.Raw(item.Description)</p>
                    <div class="view-more alignc"><a asp-action="Contact" asp-controller="Home">@Html.Raw(item.Buttontext)</a></div>
                </div>
            }
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</section>


<section class="section-holder">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="badge-wrapper">
                    @foreach (var item in Model.attorneysLogos)
                    {
                        <div class="badge-img">
                            <img src="~/images/Logo/@item.Image" class="img-fluid" alt="" width="95" height="95">
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</section>


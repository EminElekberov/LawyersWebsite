@model PracticeAbout

@section styles{ @*bunu ona gore yazdiqki burda yazilan css shared papkasinda loayout.cshtml icerisinde render ede bilek*@
<style>
    label {
        color: red;
    }
</style>
}
<form method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label>Icon Link</label>
        <input type="text" class="form-control" asp-for="IconLink">
        <span asp-validation-for="IconLink" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Header</label>
        <textarea asp-for="Header" class="form-control"></textarea>

        <span asp-validation-for="Header" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Learn text</label>
        <textarea asp-for="Learntext" class="form-control"></textarea>

        <span asp-validation-for="Learntext" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Learn Link</label>
        <input type="text" class="form-control" asp-for="LearnLink">
        <span asp-validation-for="LearnLink" style="color:red"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section scripts1{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#Description')).catch(error => {
            console.error(error);
        });
    </script>
}


@section scriptsNumOne{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>

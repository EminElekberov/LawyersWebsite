@model Packet
@{ List<PacketToComponents> ppractice = ViewBag.PacketToComponents; }
<div class="body-content">
    <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="card center-block mb-5" style="width:50rem;">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                       
                        <div class="form-group">
                            <label asp-for="ComponentsID">Hobbies</label>
                            <select asp-for="ComponentsID" class="form-select">

                                @{ int temp = 0;
                                                foreach (var item in ViewBag.Practices)
                                                {


                                    @if (temp < ppractice.Count && item.Id == ppractice.Skip(temp).FirstOrDefault().componentsId)
                                    {
                    <option value="@item.Id" selected>@item.Name</option> temp++;
                                    }
                                    else
                                    {
                    <option value="@item.Id">@item.Name</option>} } }
                            </select>
                            <span asp-validation-for="ComponentsID"></span>


                        </div>

                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model PacketVm

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Create Teacher
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red; margin-bottom:30px;"></div>
            <div class="intro-y box p-5">
                <div class="form-group">
                    <label asp-for="PacketID" class="font-weight-600">Practice Area</label>
                    <select asp-for="PacketID" class="form-select" asp-items="@(new SelectList(ViewBag.Packets, "Id", "Name"))">
                    </select>
                    <span asp-validation-for="PacketID"></span>
                </div>
                <div class="mt-3 " id="skill" style=" border: 1px solid #cfcfcf !important;   padding: 20px 40px 20px 20px; border:5px; position:relative;">
                    <span id="addSkill" style="cursor:pointer; position:absolute; right:40px; top:0px; font-size:25px; font-weight:700; color:#1c3faa">+</span>
                    <div class="skill-item" style="position:relative;">
                        <label asp-for="ComponentsId">components</label>
                        <div class="mt-2">
                            <select asp-for="ComponentsId" asp-items="@(new SelectList(ViewBag.Components, "Id", "Name"))" data-placeholder="Select your favorite actors" class="select2 w-full">
                                <option selected="" disabled>Select Skill</option>
                            </select>
                        </div>
                        <span class="deleteSkill" style="cursor:pointer; position:absolute; right:-20px; bottom:4px;font-size: 25px; font-weight: 700;color: red;">x</span>

                    </div>
                    <hr style="margin:10px 0px" />
                    <div class="text-right mt-5">
                        <a asp-area="admin" asp-controller="teacher" asp-action="index" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                        <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- END: Form Layout -->
    </div>
</div>
@model BlogHeader

@section styles{ @*bunu ona gore yazdiqki burda yazilan css shared papkasinda loayout.cshtml icerisinde render ede bilek*@
<style>
    label {
        color: red;
    }
</style>
}
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Image</label>
        <input type="file" class="form-control" asp-for="Photo">
        <span asp-validation-for="Photo" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="header">
        <span asp-validation-for="header" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@model Service

@section styles{ @*bunu ona gore yazdiqki burda yazilan css shared papkasinda loayout.cshtml icerisinde render ede bilek*@
<style>
    label {
        color: red;
    }
</style>
}
<form method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label>Header</label>
        <textarea asp-for="Header" class="form-control"></textarea>
        <span asp-validation-for="Header" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Title</label>
        <input type="text" class="form-control" asp-for="Title">
        <span asp-validation-for="Title" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Button Text</label>
        <input type="text" class="form-control" asp-for="Buttontext">
        <span asp-validation-for="Buttontext" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Button Link</label>
        <input type="text" class="form-control" asp-for="ButtonLink">
        <span asp-validation-for="ButtonLink" style="color:red"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#Description')).catch(error => {
            console.error(error);
        });
    </script>
}




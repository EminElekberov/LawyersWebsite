@model OurAbout


@section styles{ @*bunu ona gore yazdiqki burda yazilan css shared papkasinda loayout.cshtml icerisinde render ede bilek*@
<style>
    label {
        color: red;
    }
</style>
}
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Header</label>
        <input type="text" class="form-control" asp-for="Header">
        <span asp-validation-for="Header" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Headercontinue</label>
        <input type="text" class="form-control" asp-for="headerUndeer">
        <span asp-validation-for="headerUndeer" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Price</label>
        <textarea asp-for="Price" id="Price" class="form-control"></textarea>
        <span asp-validation-for="Price" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Dates</label>
        <input type="text" class="form-control" asp-for="Dates">
        <span asp-validation-for="Dates" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" id="Description" class="form-control"></textarea>

        <span asp-validation-for="Description" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Description Two</label>
        <textarea asp-for="Description2" id="Description2" class="form-control"></textarea>

        <span asp-validation-for="Description2" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Description Three</label>
        <input type="text" class="form-control" asp-for="Description3">
        <span asp-validation-for="Description3" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




@section scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#Price')).catch(error => {
            console.error(error);
        });
    </script>
}


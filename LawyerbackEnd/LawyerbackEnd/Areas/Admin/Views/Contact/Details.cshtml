
@model Contact
<table class="table table-bordered">
    <thead class="bg-password-image">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Subject</th>
            <th scope="col">Messsage</th>
            @if (Model.MyOpinion!=null)
            {
                <th>My Opinion</th>
            }
        </tr>
    </thead>
    <tbody>

            <tr class="bg-gradient-light">
                <th scope="row">@Model.Id</th>
                <td>@Html.Raw(Model.Name)</td>
                <td>@Model.Email</td>
                <td>@Model.Subject</td>
                <td>@Model.Message</td>
                @if (Model.MyOpinion!=null)
                {
                    <td>@Html.Raw(Model.MyOpinion)</td>
                }
            </tr>

        
    </tbody>
</table>
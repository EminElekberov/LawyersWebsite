<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Image</label>
        <input type="file" class="form-control" asp-for="Photo">
        <span asp-validation-for="Photo" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Job</label>
        <input type="text" class="form-control" asp-for="Job">
        <span asp-validation-for="Job" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>SocialNetworkLink</label>
        <textarea asp-for="SocialNetworkLink" class="form-control"></textarea>
        <span asp-validation-for="SocialNetworkLink" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>SocialNetworkLinkTwo</label>
        <textarea asp-for="SocialNetworkLink2" class="form-control"></textarea>
        <span asp-validation-for="SocialNetworkLink2" style="color:red"></span>
    </div>

    <div class="mb-3">
        <label>SocialNetworkLinkThree</label>
        <textarea asp-for="SocialNetworkLink3" class="form-control"></textarea>
        <span asp-validation-for="SocialNetworkLink3" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>SocialNetworkLinkfour</label>
        <textarea asp-for="SocialNetworkLink4" class="form-control"></textarea>
        <span asp-validation-for="SocialNetworkLink4" style="color:red"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
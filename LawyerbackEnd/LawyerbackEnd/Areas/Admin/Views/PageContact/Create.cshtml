@model PageContact


<form method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" style="color:red"></div>*@

    <div class="mb-3">
        <label>Link</label>
        <input type="text" class="form-control" asp-for="Link">
        <span asp-validation-for="Link" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Link Description</label>
        <input type="text" class="form-control" asp-for="LinkDescription">
        <span asp-validation-for="LinkDescription" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>



@section scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#Description')).catch(error => {
            console.error(error);
        });
    </script>
}


@model PageContact


<form method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" style="color:red"></div>*@

    <div class="mb-3">
        <label>Header</label>
        <input type="text" class="form-control" asp-for="Header">
        <span asp-validation-for="Header" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Title</label>
        <input type="text" class="form-control" asp-for="Title">
        <span asp-validation-for="Title" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Link</label>
        <input type="text" class="form-control" asp-for="Link">
        <span asp-validation-for="Link" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Link Description</label>
        <input type="text" class="form-control" asp-for="LinkDescription">
        <span asp-validation-for="LinkDescription" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
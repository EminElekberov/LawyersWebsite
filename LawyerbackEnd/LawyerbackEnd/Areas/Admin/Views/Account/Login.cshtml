@model User

@{
    Layout = null;
}
@section style1{
    <style>
        .container {
            background-image: url(~/login/images/bg.jpg);
            background-repeat: repeat;
            font-size: .75em;
            font-family: Verdana, Helvetica, Sans-Serif;
            margin: 0;
            padding: 0;
            color: #696969;
            background-size: cover;
        }
    </style>
}
<div class="container">
    <!--<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">-->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">

    <div style="margin-top:100px" class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="login-wrap p-0">
                <h3 class="mb-4 text-center">Have an account?</h3>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group" style="margin-bottom:20px">
                        <input type="text" class="form-control" placeholder="Username" asp-for="Email">
                        <span asp-validation-for="Email" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <input id="password-field" type="password" class="form-control" placeholder="Password" asp-for="PasswordHash" required>
                        <span asp-validation-for="PasswordHash"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-success submit px-3 mt-4">Sign in</button>
                        @*<a asp-action="Login" asp-controller="Account" ><button type="submit" class="form-control btn btn-primary submit px-3 mt-4">Sign Up</button></a>*@
                    </div>
                    <div class="form-group d-md-flex">
                        <div class="w-50">
                            <label class="checkbox-wrap checkbox-primary">
                                Remember Me
                                <input type="checkbox" checked>
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="w-50 text-md-right">
                            <a href="#" style="color: #fff">Forgot Password</a>
                        </div>
                    </div>
                </form>
                <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>

            </div>
        </div>
    </div>
</div>
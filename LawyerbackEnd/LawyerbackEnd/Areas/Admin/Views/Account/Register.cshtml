@model Register

@{
    Layout = null;
}
<div class="container">
    <!--<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">-->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">

    <div style="margin-top:100px" class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="login-wrap p-0">
                <h3 class="mb-4 text-center">Have an account?</h3>
                <form method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                        <span asp-validation-for="Email" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <input id="password-field" type="password" class="form-control" placeholder="Password" asp-for="Password" required>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input id="password-field" type="password" class="form-control" placeholder="Repeat Password" asp-for="ConfirmPassword" required>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger btn-block" value="Register" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>